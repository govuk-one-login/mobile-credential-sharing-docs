# Using this file:
# `brew bundle` in the root directory of the repository.

# terminal programs
brew "gh" unless system "gh", "--version"
brew "gnupg" unless system "gpg", "--version"
brew "gpg2" unless system "gpg2", "--version"
brew "shellcheck" unless system "shellcheck", "--version"
brew "vale" unless system "vale", "--version"

# casks (binary apps, such as from installers) - if needed/ required
cask "visual-studio-code" unless system "command", "-v", "code"
